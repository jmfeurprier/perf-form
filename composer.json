{
	"name"        : "perf/form",
	"type"        : "library",
	"license"     : "MIT",
	"description" : "Allows to represent form fields and to validate submitted values.",
	"require"     : {
		"php"          : ">=8.2",
		"ext-mbstring" : "*"
    },
	"require-dev": {
		"ext-xdebug"                : "*",
		"phing/phing"               : "^2.17",
		"phpunit/phpunit"           : "^10.1",
		"phpmd/phpmd"               : "^2.13",
		"squizlabs/php_codesniffer" : "^3.7",
		"phpstan/phpstan": "^1.10",
		"rector/rector": "^0.17.1"
	},
	"autoload" : {
		"psr-4" : {
			"perf\\Form\\" : "src/"
		}
	},
	"autoload-dev" : {
		"psr-4" : {
			"perf\\Form\\" : "test/unit/src/"
		}
	}
}
